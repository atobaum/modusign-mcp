{
  "manifest_version": "0.2",
  "name": "modusign-mcp",
  "display_name": "Modusign MCP",
  "version": "1.0.0",
  "description": "MCP server for Modusign (모두싸인) electronic contract & signature service",
  "author": {
    "name": "atobaum",
    "email": "atobaum@gmail.com"
  },
  "user_config": {
    "email": {
      "type": "string",
      "title": "Modusign 이메일",
      "description": "모두싸인 계정 이메일 주소",
      "required": true
    },
    "api_key": {
      "type": "string",
      "title": "Modusign API Key",
      "description": "모두싸인 API KEY",
      "required": true,
      "sensitive": true
    },
    "base_url": {
      "type": "string",
      "title": "API Base URL (선택)",
      "description": "Modusign API 기본 URL. 기본값: https://api.modusign.co.kr",
      "required": false,
      "default": "https://api.modusign.co.kr"
    }
  },
  "server": {
    "type": "node",
    "entry_point": "dist/index.js",
    "mcp_config": {
      "command": "node",
      "args": [
        "${__dirname}/dist/index.js"
      ],
      "env": {
        "MODUSIGN_EMAIL": "${user_config.email}",
        "MODUSIGN_API_KEY": "${user_config.api_key}",
        "MODUSIGN_BASE_URL": "${user_config.base_url}"
      }
    }
  },
  "license": "MIT"
}
